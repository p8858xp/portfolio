<!-- ADDING SCORE PAGE -->
<div id="addcontainer">
  <div id="addcontent">
    <div class='goback'><a href='/'>Home</a></div>
    <!-- create a form to add a new score to your profile -->
    <form method="POST" action="/add">
      <div>
        <label for="date">Date:</label>
        <input type="text" name="date" value="">
      </div>
    	<div>
    		<label for="course">Golf Course:</label>
    		<input type="text" name="course" value="">
    	</div>
    	<div>
    		<label for="par">Course Par:</label>
    		<input type="text" name="par" value="">
    	</div>
      <div>
        <label for="score">Score:</label>
        <input type="text" name="score" value="">
      </div>
    	<div><input type="submit" value="Add Score"></div>
    </form>
    <!-- add a link to view your current list of score -->
    <div id="pastscores"><a href='/list'>View past scores</a></div>
  </div>
</div>
